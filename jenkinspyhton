pipeline {
    agent any

    environment {
        SONARQUBE_ENV = 'SonarQube'             // Le nom du serveur Sonar dans Jenkins
        SCANNER_NAME = 'SonarQube Scanner'       // Le nom du scanner Sonar install√© dans Jenkins
        PROJECT_KEY = 'alpinehelloworld'         // Nom de ton projet sur SonarQube
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'üîÑ R√©cup√©ration du code source...'
                checkout scm
            }
        }

        stage('Install Python Dependencies') {
            steps {
                echo 'üì¶ Installation des d√©pendances Python...'
                sh '''
                    if command -v pip3 >/dev/null 2>&1; then
                        PIP=pip3
                    else
                        PIP=pip
                    fi

                    if [ -f requirements.txt ]; then
                        $PIP install -r requirements.txt
                    else
                        echo "Pas de fichier requirements.txt trouv√©"
                    fi
                '''
            }
        }

        stage('Analyse SonarQube') {
            steps {
                echo 'üîç Lancement de l‚Äôanalyse SonarQube...'
                script {
                    def scannerHome = tool "${SCANNER_NAME}"
                    withSonarQubeEnv("${SONARQUBE_ENV}") {
                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                              -Dsonar.projectKey=${PROJECT_KEY} \
                              -Dsonar.sources=. \
                              -Dsonar.python.version=3.11
                        """
                    }
                }
            }
        }

        stage('Build Python Project') {
            steps {
                echo 'üîß Compilation (optionnelle)...'
                sh '''
                    if [ -f setup.py ]; then
                        python setup.py install
                    else
                        echo "Pas de setup.py, √©tape ignor√©e"
                    fi
                '''
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline termin√©e avec succ√®s.'
        }
        failure {
            echo '‚ùå √âchec de la pipeline.'
        }
    }
}
