pipeline {
    agent any

    environment {
        SONARQUBE_ENV = 'SonarQube'              // Nom de ton serveur SonarQube dans Jenkins
        SCANNER_NAME = 'SonarQube Scanner'        // Nom du Scanner SonarQube configur√© dans Jenkins
        PROJECT_KEY = 'alpinehelloworld'          // Ton projectKey dans SonarQube
        SONARQUBE_URL = 'http://sonarqube:9000'   // L'URL de ton serveur SonarQube (nom du service Docker)
    }

    stages {
        // √âtape de r√©cup√©ration du code source depuis ton repo
        stage('Checkout Code') {
            steps {
                echo 'üîÑ R√©cup√©ration du code source...'
                checkout scm
            }
        }

        // Installation des d√©pendances Python (si n√©cessaire dans ton projet)
        stage('Install Python Dependencies') {
            steps {
                echo 'üì¶ Installation des d√©pendances Python...'
                sh '''
                    if [ -f webapp/requirements.txt ]; then
                        python3 -m venv venv
                        bash -c "source venv/bin/activate && pip install -r webapp/requirements.txt"
                    else
                        echo "Pas de fichier requirements.txt trouv√© dans webapp"
                    fi
                '''
            }
        }

        // √âtape d'analyse SonarQube
        stage('Analyse SonarQube') {
            steps {
                echo 'üîç Lancement de l‚Äôanalyse SonarQube...'
                script {
                    def scannerHome = tool "${SCANNER_NAME}"
                    // Avec l'environnement SonarQube configur√© dans Jenkins
                    withSonarQubeEnv("${SONARQUBE_ENV}") {
                        // Utilisation d'un token pour l'authentification avec SonarQube
                        withCredentials([string(credentialsId: 'sonar-token-id', variable: 'SONAR_TOKEN')]) {
                            sh """
                                ${scannerHome}/bin/sonar-scanner \
                                  -Dsonar.projectKey=${PROJECT_KEY} \
                                  -Dsonar.sources=. \
                                  -Dsonar.login=${SONAR_TOKEN} \
                                  # L'URL est automatiquement inject√©e via withSonarQubeEnv
                            """
                        }
                    }
                }
            }
        }

        // √âtape de compilation de ton projet Python (facultatif selon ton projet)
        stage('Build Python Project') {
            steps {
                echo 'üîß Compilation (optionnelle)...'
                sh '''
                    if [ -f setup.py ]; then
                        python setup.py install
                    else
                        echo "Pas de setup.py, √©tape ignor√©e"
                    fi
                '''
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline termin√©e avec succ√®s.'
        }
        failure {
            echo '‚ùå √âchec de la pipeline.'
        }
    }
}
